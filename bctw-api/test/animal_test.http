# create references to Critter IDs in projectroot/.vscode/settings.json
@critter1 = {{existing_critter}}
@critter2 = {{existing_critter2}}
@critterCanChange = {{critter_with_change_permission}}
### add a new animal
POST http://localhost:3000/add-animal?idir={{idir}} HTTP/1.1
content-type: application/json

{
  "animal_id": "test123",
  "animal_status": "A",
  "juvenile_at_heel": "N",
  "species": "unicorn",
  "sex": "M",
  "wlh_id": "abc123",
  "nickname": "shimmer"
}

### add more than one animal
POST http://localhost:3000/add-animal?idir={{idir}} HTTP/1.1
content-type: application/json

[
  {
    "animal_id": "test123",
    "animal_status": "P",
    "juvenile_at_heel": "Y",
    "species": "caribou",
    "sex": "M",
    "wlh_id": "abc1233",
    "nickname": "shimmer"
  },
  {
    "animal_id": "test1234",
    "animal_status": "M",
    "juvenile_at_heel": "N",
    "sex": "F",
    "wlh_id": "abc123",
    "nickname": "unknown"
  }
]

### update existing animal
POST http://localhost:3000/update-animal?idir={{idir}} HTTP/1.1
content-type: application/json

{
  "animal_id": "test123",
  "animal_status": "X",
  "sex": "M",
  "wlh_id": "abc123",
  "nickname": "shimmer",
  "critter_id": "{{critter1}}"
}

### update multiple animals
POST http://localhost:3000/update-animal?idir={{idir}} HTTP/1.1
content-type: application/json

[
  {
    "animal_id": "test123",
    "animal_status": "A",
    "calf_at_heel": true,
    "sex": "M",
    "wlh_id": "abc123",
    "nickname": "shimmer",
    "critter_id": "{{critter1}}"
  },
  {
    "animal_id": "test123",
    "animal_status": "A",
    "sex": "M",
    "wlh_id": "abc123",
    "nickname": "shimmer",
    "critter_id": "{{critter2}}"
  }
]

