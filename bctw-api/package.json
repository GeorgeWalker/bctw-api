{
  "name": "bctw-api",
  "version": "1.0.0",
  "description": "Collecting and dispensing BC Telemetry data",
  "main": "start.js",
  "scripts": {
    "dev": "bash -c 'node_modules/supervisor/lib/cli-wrapper.js -w build/server.js build/server.js'",
    "start": "npx pm2@4.4.0 --no-daemon start build/server.js",
    "build": "rimraf ./build && tsc",
    "test": "jest",
    "lint": "eslint . --ext .ts --no-error-on-unmatched-pattern",
    "start:dev": "nodemon -r dotenv/config dotenv_config_path=.env",
    "watch": "tsc -w"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/bcgov/bctw-api/bctw-api"
  },
  "author": "BC Government",
  "license": "ISC",
  "dependencies": {
    "async": "^3.2.0",
    "body-parser": "^1.19.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "csv-parser": "^2.3.3",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "helmet": "^3.23.3",
    "moment": "^2.27.0",
    "morgan": "^1.10.0",
    "multer": "^1.4.2",
    "needle": "^2.5.0",
    "pg": "^8.2.1",
    "xml2json": "^0.12.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.7",
    "@types/express": "^4.17.8",
    "@types/helmet": "0.0.48",
    "@types/jest": "^26.0.14",
    "@types/multer": "^1.4.4",
    "@types/node": "^14.11.5",
    "@types/pg": "^7.14.5",
    "@types/xml2json": "^0.11.3",
    "@typescript-eslint/eslint-plugin": "^4.4.0",
    "@typescript-eslint/parser": "^4.4.0",
    "eslint": "^7.10.0",
    "eslint-config-prettier": "^7.1.0",
    "jest": "^26.5.2",
    "nodemon": "^2.0.7",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "supervisor": "^0.12.0",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.3"
  },
  "jest": {
    "verbose": true,
    "modulePaths": [
      "<rootDir>"
    ]
  }
